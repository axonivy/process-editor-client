{
  "$schema" : "https://json-schema.axonivy.com/process/12.0.0/process.json",
  "id" : "180D20366E0D3C6D",
  "config" : {
    "data" : "screenshot.project.Mailer"
  },
  "elements" : [ {
      "id" : "f0",
      "type" : "RequestStart",
      "name" : "start.ivp",
      "config" : {
        "signature" : "start"
      },
      "visual" : {
        "at" : { "x" : 96, "y" : 64 }
      },
      "connect" : [
        { "id" : "f4", "to" : "f3" }
      ]
    }, {
      "id" : "f1",
      "type" : "TaskEnd",
      "visual" : {
        "at" : { "x" : 352, "y" : 64 }
      }
    }, {
      "id" : "f3",
      "type" : "EMail",
      "name" : [
        "inform",
        "failure"
      ],
      "config" : {
        "headers" : {
          "subject" : "Registration failed for <%=in.user.name%>",
          "from" : "no-reply@axonivy.com",
          "to" : "<%=in.user.mail%>"
        },
        "message" : {
          "body" : [
            "<html>",
            "Hi <%=in.user.name%>",
            "",
            "Unfortunately your registration failed. ",
            "The system responded with <%=in.error%>.",
            "",
            "Best regards,",
            "ivyTeam",
            "",
            "<%=ivy.cms.co(\"/images/axon_ivy_logo\")%>",
            "",
            "</html>"
          ],
          "contentType" : "text/html"
        },
        "attachments" : [
          "in.documents",
          "ivy.cm.findObject(\"/images/404\")"
        ]
      },
      "visual" : {
        "at" : { "x" : 224, "y" : 64 }
      },
      "connect" : [
        { "id" : "f2", "to" : "f1" }
      ]
    } ]
}