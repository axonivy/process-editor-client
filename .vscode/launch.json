{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Standalone (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000?server=localhost:8081&app=designer&pmv=workflow-demos&file=/processes/Humantask/ProcurementRequestParallel.p.json",
      "presentation": {
        "group": "4. Standalone",
        "order": 1
      },
      "preLaunchTask": "Start Standalone",
      "postDebugTask": "Terminate All Tasks"
    },
    {
      "name": "Launch Viewer (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000?server=localhost:8081&app=designer&pmv=workflow-demos&file=/processes/Humantask/ProcurementRequestParallel.p.json",
      "presentation": {
        "group": "4. Standalone",
        "order": 1
      },
      "preLaunchTask": "Start Viewer",
      "postDebugTask": "Terminate All Tasks"
    },
    {
      "name": "Launch Eclipse (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "presentation": {
        "group": "4. Standalone",
        "order": 1
      },
      "preLaunchTask": "Start Eclipse",
      "postDebugTask": "Terminate All Tasks"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Current Test",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": [
        "--config",
        "${workspaceRoot}/packages/editor/vitest.config.ts",
        "run",
        "${workspaceRoot}/${relativeFile}"
      ],
      "smartStep": true,
      "console": "integratedTerminal",
      "presentation": {
        "group": "1. Tests",
        "order": 1
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run All Test",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": ["--root", "${workspaceRoot}/packages/editor"],
      "smartStep": true,
      "console": "integratedTerminal",
      "presentation": {
        "group": "1. Tests",
        "order": 2
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Current Web Tests",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/integration/standalone",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeArgs": ["webtest", "${file}"],
      "env": {
        "BASE_URL": "${input:webtestBaseUrl}"
      },
      "sourceMaps": true,
      "smartStep": true,
      "outputCapture": "std",
      "presentation": {
        "group": "1. Tests",
        "order": 3
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Web Tests",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/integration/standalone",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeArgs": ["webtest"],
      "env": {
        "BASE_URL": "${input:webtestBaseUrl}"
      },
      "sourceMaps": true,
      "smartStep": true,
      "outputCapture": "std",
      "presentation": {
        "group": "1. Tests",
        "order": 4
      }
    }
  ],
  "inputs": [
    {
      "id": "webtestBaseUrl",
      "description": "BaseURL for Web Tests",
      "type": "promptString",
      "default": "localhost:8081/designer"
    }
  ]
}
